@{
    ViewData["Title"] = "SignIn";
}
@model FreeCourse.Web.Models.SigninInput
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card-body">
            <h5 class="card-title">Giriş</h5>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form asp-controller="Auth" asp-action="SignIn" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" value="ym.dvc@hotmail.com" aria-describedby="emailHelp">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control"value="Password12*">
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" asp-for="IsRemember"></label>
                </div>
                <button type="submit" class="btn btn-primary">Giriş yap</button>
            </form>
        </div>

    </div>
</div>

